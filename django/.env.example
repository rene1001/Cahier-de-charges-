# Fichier de configuration des variables d'environnement

# Configuration LigdiCash
# Pour obtenir vos clés API, créez un compte sur https://ligdicash.com
LIGDICASH_API_KEY=pk_test_votre_api_key_ici
LIGDICASH_AUTH_TOKEN=auth_test_votre_token_ici
LIGDICASH_TEST_MODE=True  # Mettre à False en production

# Configuration de l'application
SECRET_KEY=votre_secret_key_django
DEBUG=True

# URLs de callback (à ajuster selon votre domaine)
LIGDICASH_NOTIFY_URL=http://localhost:8000/paiement/ligdicash/notify/
LIGDICASH_RETURN_URL=http://localhost:8000/paiement/ligdicash/retour/
LIGDICASH_CANCEL_URL=http://localhost:8000/paiement/ligdicash/annulation/